            // Get form data
            const formData = {
                fullName: document.getElementById('full-name').value,
                email: document.getElementById('email').value,
                company: document.getElementById('company').value
            };
            
            // Normally you would send this data to a server
            console.log('Form submitted:', formData);
            
            // Show success message
            accessForm.innerHTML = `
                <div class="form-success">
                    <img src="assets/icon-check.svg" alt="Success">
                    <h3>Request Received!</h3>
                    <p>Thank you for your interest in OmniTest. We'll be in touch soon with more information.</p>
                </div>
            `;
        });
    }
});


// Navigation bar scroll effect
document.addEventListener('DOMContentLoaded', function() {
    // Variables for scroll handling
    const header = document.querySelector('.header');
    let lastScrollTop = 0;
    let scrollThreshold = 50; // Minimum scroll amount before triggering effect
    let animationFrameId = null;
    
    // Function to handle scroll efficiently with requestAnimationFrame
    function handleScroll() {
        if (animationFrameId) {
            return;
        }
        
        animationFrameId = window.requestAnimationFrame(function() {
            const currentScrollTop = window.pageYOffset || document.documentElement.scrollTop;
            
            // Don't apply effect at the very top of page
            if (currentScrollTop < 10) {
                header.classList.remove('fade-out');
                header.classList.add('fade-in');
                lastScrollTop = currentScrollTop;
                animationFrameId = null;
                return;
            }
            
            // Check if scrolled enough to trigger effect
            if (Math.abs(lastScrollTop - currentScrollTop) <= scrollThreshold) {
                animationFrameId = null;
                return;
            }
            
            // Scrolling down - hide the header
            if (currentScrollTop > lastScrollTop) {
                header.classList.add('fade-out');
                header.classList.remove('fade-in');
            } 
            // Scrolling up - show the header
            else {
                header.classList.remove('fade-out');
                header.classList.add('fade-in');
            }
            
            lastScrollTop = currentScrollTop;
            animationFrameId = null;
        });
    }
    
    // Add scroll event listener
    window.addEventListener('scroll', handleScroll, { passive: true });
    
    // Initialize header state
    header.classList.add('fade-in');
    
    console.log('Navigation scroll effect initialized');
});

// Navigation bar fade effect
document.addEventListener('DOMContentLoaded', function() {
    const header = document.querySelector('.header');
    let lastScrollY = window.scrollY;
    
    window.addEventListener('scroll', function() {
        const scrollY = window.scrollY;
        
        // At the top of the page or scrolling up - show header
        if (scrollY < 100 || scrollY < lastScrollY) {
            header.classList.remove('fade-out');
            header.classList.add('fade-in');
        } 
        // Scrolling down - hide header
        else if (scrollY > lastScrollY && scrollY > 200) {
            header.classList.add('fade-out');
            header.classList.remove('fade-in');
        }
        
        lastScrollY = scrollY;
    });
});
